@require "reset"

$main-color = #b9c126
$secondary-color = #504679
$text-color = rgba(0,0,0, .7)

@keyframes down {
  0% {
    position absolute
    bottom 0
  }

  50% {
    position absolute
    bottom 25px
  }

  100% {
    position absolute
    bottom 0
  }

}

setBackground(link)
  background url(link) no-repeat center
  background-size cover

fs(val)
  font-size val

.flying-block
  width 70%
  background #fff
  height 450px
  position absolute
  top -225px
  left 50%
  margin-left -35%
  box-shadow: 0px -5px 74px -13px rgba($secondary-color, .2)

global-reset()

html, body
  height 100%
  font-family 'Roboto', sans-serif

*
