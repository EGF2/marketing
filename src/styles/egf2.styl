body
  font-family 'Source Sans Pro', sans-serif
  margin 0
  padding 0

h5,h2, p
  margin 0
  padding 0

a
  text-decoration none

header
  padding-top 50px
  text-transform: uppercase
  display flex
  justify-content: space-between
  align-items center
  align-content center
  color #fff
  width: 100%
  align-self flex-end
  h2
    cursor pointer
    a
      color #fff
      text-transform lowercase
      font-style italic
      font-size 16px
      &:hover
        text-decoration underline
  nav
    a
      color #fff
      letter-spacing 2px
      margin-right 30px
      border solid 1px #58565a
      padding 10px 18px

#app
  .center
    width 90%
    margin 0 auto

#first
  min-height 100vh
  width 100%
  background linear-gradient(
    rgba(20, 9, 29, 0.75),
    rgba(20, 9, 29, 0.75)
    ),
     url('/images/pentagon.png');
  h1
    font-size 28px
    color #fff
    text-align center
    text-transform: uppercase
    margin-top 150px
    font-weight 400
    sup
      font-size 16px
      color #e77da0
      font-weight bold
  h4
    width 80%
    margin 0 auto
    color #fff
    font-weight 300
    font-size 24px
    text-align center
    a
      font-weight bold
      color #2574db
      font-size 22px
#second
  min-height: 100vh
  h1
    color #fff
    font-size 44px
    font-weight 300
    text-transform uppercase
  h2
    color #fff
    font-weight 200
    font-size 26px
    line-height 150%
  h5
    font-weight 300
    font-size: 24px
    color #fff;
  .underline
    width 100%
    position relative
    border-bottom solid 1px #fff
    span
      position absolute
      bottom 0
      height 5px
      width 5px
      background #fff
      border-radius 50%
      &.dot-1
        left -3px
        bottom -3px
      &.dot-2
        right -3px
        bottom -3px
  .center
    width 60%
    margin 0 auto
  height 100vh
  width 100%
  display flex
  justify-content center
  align-items center
  text-align: center;
  background linear-gradient(
      rgba(41, 210, 103, 0.75),
      rgba(41, 210, 103, 0.75)
    ),
     url('/images/pentagon.png');

#third
  background #14091d;
  min-height 100vh
  width 100%
  >h2
    width 60%
    margin 0 auto
    color #fff
    font-weight 300
    font-size 24px
    text-align center
    padding 70px 0
  .offer
    padding 100px 0
    >h2
      width 60%
      margin 0 auto
      color #fff
      font-weight 300
      font-size 22px
      text-align center
      padding 20px 0
      a
        color #2574db
  .row
    display flex
    >div
      width 50%
      text-align left
      border solid 1px rgba(255, 255, 255, 0.1)
      height 200px
      display flex
      justify-content center
      flex-direction column
      align-content:flex-start;
      &:nth-child(1)
        border-bottom none
        border-right none
      &:nth-child(3)
        border-bottom none
        border-right none
      &:nth-child(5)
        border-bottom none
        border-right none
      &:nth-child(7)
        border-bottom none
        border-right none
      &:nth-child(2)
        border-bottom none
      &:nth-child(4)
        border-bottom none
      &:nth-child(6)
        border-bottom none
      h2, h5, p
        padding 0 70px
        color #fff
      h5
        font-size 18px
        color rgba(255, 255, 255, 0.4);
        font-weight bold
      h2
        font-size 20px
      p
        font-weight 300
        font-size 20px
